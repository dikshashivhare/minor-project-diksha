<div class="card">
  <div class="card-header">
    <h3>New Job</h3>
  </div>
  <div class="card-body">
    <%= form_for([:employeer, @job ]) do |form| %>
    <% if job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
        <% job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <%= form.hidden_field :employeer_id, value: current_employeer.id %>
    <div class="row">
      <div class="col-sm col-md">
        <div class="form-group">
          <%= form.label :job_category %>
          <%= form.select :job_category_id, options_for_select(JobCategory.all.collect{|jc| [jc.name, jc.id]}), {prompt: "Select a job category"}, {id: :job_job_category, class: "form-control"} %>
        </div>
      </div>
      <div class="col-sm col-md">
        <div class="form-group">
          <%= form.label :job_title %>
          <%= form.text_field :job_title, id: :job_job_title, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm col-md">
        <div class="form-group">
          <%= form.label :email %>
          <%= form.text_field :email, id: :job_email, class: "form-control" %>
        </div>
      </div>
      <div class="col-sm col-md">
        <div class="form-group">
          <%= form.label :job_type %>
          <%= form.text_field :job_type, id: :job_job_type , class: "form-control"%>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm col-md">
        <div class="form-group">
          <%= form.label :venue %>
          <%= form.text_field :venue, id: :job_venue , class: "form-control", id:"autocomplete",
          onFocus: "geolocate()"%>
        </div>
      </div>
      <div class="col-sm col-md">
        <div class="form-group">
          <%= form.label :city %>
          <%= form.text_field :city, id: :job_city, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm col-md">
        <div class="form-group">
          <%= form.label :state %>
          <%= form.text_field :state, id: :job_state, class: "form-control" %>
        </div>
      </div>
      <div class="col-sm col-md">
        <div class="form-group">
          <%= form.label :country %>
          <%= form.text_field :country, id: :job_country, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm col-md">
        <div class="form-group">
          <%= form.label :zipcode %>
          <%= form.text_field :zipcode, id: :job_zipcode, class: "form-control" %>
        </div>
      </div>
      <div class="col-sm col-md">
        <div class="form-group">
          <%= form.label :company_id %>
          <%= form.select :company_id, options_for_select(current_employeer.companies.collect{|jc| [jc.name, jc.id]}), {prompt: "Select a company"}, {id: :company_id, class: "form-control"} %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm col-md">
        <div class="form-group">
          <%= form.label :salary_range %>
          <%= form.text_field :salary_range, id: :job_salary_range, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm col-md">
        <div class="form-group">
          <%= form.label :job_description %>
          <%= form.text_area :job_description, id: :job_job_description, rows: "8" , class: "form-control"%>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= form.submit class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>